# MongoDB Configuration
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/microjob
# For Local MongoDB: mongodb://localhost:27017/microjob
MONGODB_URI=mongodb://localhost:27017/microjob

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT Configuration (optional, if implementing token auth)
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
